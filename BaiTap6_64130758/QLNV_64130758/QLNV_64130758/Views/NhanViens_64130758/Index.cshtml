@model IEnumerable<QLNV_64130758.Models.NhanVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "TenNV", rowsPerPage: 2);
    int i = 0;
    string gioitinh = "";

}

<h2>DANH SÁCH NHÂN VIÊN</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<style>
    .grid-footer{
        text-align: center;
    }
</style>
<div id="gridContent">
    @ViewBag.TB
    @grid.GetHtml(
        tableStyle: "table table-bordered table-hover",
        footerStyle: "grid-footer",
        fillEmptyRows: true,
        mode: WebGridPagerModes.Numeric,
        alternatingRowStyle: "alternatingRowStyle",
          columns: new[]  // colums in grid
         {
    grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
    grid.Column("MaNV","Mã nhân viên"), //the model fields to display
    grid.Column("HoNV","Họ nhân viên"  ),
    grid.Column("TenNV","Tên nhân viên"),
    grid.Column("GioiTinh","Giới tính",format: (@item) => @item.GioiTinh==true?"Nam":"Nữ"),
    grid.Column("NgaySinh","Ngày sinh",format:@<text> @item.NgaySinh.ToString("dd/MM/yyyy")</text>),
    grid.Column("Luong","Tiền lương",format:@<text> @item.Luong.ToString("#,##0")</text>),
    grid.Column("DiaChi","Địa chỉ"),
    grid.Column("PhongBan.TenPB","Phòng ban"),
    grid.Column(format: (item) => Html.ActionLink("Cập nhật", "Edit", "Nhanviens_64130758",new { id = item.MaNV },"NhanViensController")),
    grid.Column(format: (item) => Html.ActionLink("Xem chi tiết", "Details","Nhanviens_64130758", new { id = item.MaNV },"NhanViensController")),
    grid.Column(format: (item) => Html.ActionLink("Xóa", "Delete","Nhanviens_64130758", new { id = item.MaNV },"NhanVienViensController")),
    grid.Column("Chức năng", format: @<text>
    <a href="@Url.Action("Edit",
                    new { id = item.MaNV})" class="edit-btn"><abbr title="Cập nhật dữ liệu"><img src="/images/edit.png" width="20" height="20" /></abbr></a>
    <a href="@Url.Action("Details",
                    new { id = item.MaNV})" class="edit-btn"><abbr title="Xem chi tiết"><img src="/images/details.png" width="20" height="20" /></abbr></a>
    <a href="@Url.Action("Delete",
                    new { id = item.MaNV})" class="edit-btn">
        <abbr title="Xóa dữ liệu">
            <img src="/images/delete.png" width="20" height="20" />
        </abbr>
    </a>
</text>),

}
)
</div>
